<div class="container">
    <h3 class="mt-3">Recently Added</h3>
    <div class="row">
        <% books.forEach(book => { %>
            <div class="col-12 col-md-3">
                <div class="card" style="width: 18rem;">
                    <img height="270px" src="<%= book.coverImagePath %>" class="card-img-top" alt="<%= book.name %>">
                    <div class="card-body">
                        <h5><%= book.title %></h5>
                        <p class="card-text"><%= book.publishedDate.toLocaleDateString() %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
