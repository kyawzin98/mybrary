<div class="container">
    <h3 class="mt-3">Search Books</h3>
    <form class="" action="/books" method="GET">
        <div class="row">
            <div class="col-12 col-md-4 mb-3">
                <label for="title" class="form-label">Title</label>
                <input id="title" class="form-control" name="title" type="text" placeholder="Title"
                       value="<%= searchOptions.title %>">
            </div>
            <div class="col-12 col-md mb-3">
                <label for="publishedAfter" class="form-label">Published After</label>
                <input id="publishedAfter" type="date" class="form-control" name="publishedAfter"
                       value="<%= searchOptions.publishedAfter %>">
            </div>
            <div class="col-12 col-md mb-3">
                <label for="publishedBefore" class="form-label">Published Before</label>
                <input id="publishedBefore" type="date" class="form-control" name="publishedBefore"
                       value="<%= searchOptions.publishedBefore %>">
            </div>
            <div class="col-12 col-md-1">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </div>
        </div>
    </form>
    <div class="row">
        <% books.forEach(book => { %>
            <div class="col-12 col-md-3">
                <div class="card" style="width: 18rem;">
                    <img height="270px" src="<%= book.coverImagePath %>" class="card-img-top" alt="<%= book.name %>">
                    <div class="card-body">
                        <h5><%= book.title %></h5>
                        <p class="card-text"><%= book.publishedDate.toLocaleDateString() %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
