<div class="container">
    <h2><%= book.title %></h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="<%=book.coverImagePath%>"/>
                <div class="card-body">
                    <a href="/books/<%=book._id%>/edit" class="btn btn-primary" >Edit</a>
                    <%- include('../partials/deleteForm',{url: `/books/${book._id}`})%>
                    <a href="/authors/<%=book.author._id%>" class="btn btn-primary btn-block">View Author</a>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div>Author: <%=book.author.name%></div>
            <div>Published Date: <%=book.publishedDate.toDateString()%></div>
            <div>Page Count: <%=book.pageCount%></div>
            <div>Description: <%=book.description%></div>
        </div>
    </div>
</div>
