<div class="container">
    <div class="row">
        <div class="col">
            <h5 class="mt-3"><%= author.name %></h5>
            <div class="">
                <a href="/authors/<%= author._id %>/edit" class="btn btn-info">Edit</a>
                <%- include('../partials/deleteForm',{url: `/authors/${author._id}`}) %>
            </div>
            <% if (books.length > 0) { %>
                <h6 class="mt-3">Books by Authors</h6>
                <div class="row">
                    <% books.forEach(book => { %>
                        <div class="col-3">
                            <div class="card">
                                <img height="300px" src="<%= book.coverImagePath %>" class="card-img-top" alt="<%= book.name %>">
                                <div class="card-body">
                                    <h5><%= book.title %></h5>
                                    <p class="card-text"><%= book.publishedDate.toLocaleDateString() %></p>
                                    <span><%= book.author.name%></span>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
</div>
