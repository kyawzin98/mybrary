<div class="container">
    <h3 class="mt-3">Search Authors</h3>
    <form class="d-flex" action="/authors" method="GET">
        <input class="form-control me-2"
               name="name"
               type="search"
               placeholder="Search"
               value="<%= searchOptions.name%>"
               aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <hr>
    <% authors.forEach(author => {%>
    <div class="text-info"><%=author.name%></div>
    <%})%>
</div>
